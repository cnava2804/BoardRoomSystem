@model IEnumerable<BoardRoomSystem.Models.AreasViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Areas</h1>
@if (ViewData["Alert"] != null)
{
    <h3>@ViewData["Alert"]</h3>
}
<div>
    <a asp-action="Create" class="btn btn-success"><i class="far fa-file"></i> Nuevo</a>
</div>

<br />
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Area_Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area_Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Area_Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
