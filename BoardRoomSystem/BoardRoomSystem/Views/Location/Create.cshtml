@model BoardRoomSystem.Models.Location

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Ubicación</h2>


<ol class="breadcrumb">
  <li><a asp-action="Index" asp-controller="Home">Home</a></li>
  <li><a asp-action="Index">Ubicaciones</a></li>
  <li><label>Nuevo</label></li>
  @*<li class="active">Data</li>*@
</ol>
<hr />

@if (ViewData["Alert"] != null)
            {
                <h4>@ViewData["Alert"]</h4>
            }
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameLocation" class="control-label"></label>
                <input asp-for="NameLocation" class="form-control" />
                <span asp-validation-for="NameLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
