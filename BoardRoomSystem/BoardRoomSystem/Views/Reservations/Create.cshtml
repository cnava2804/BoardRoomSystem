@model BoardRoomSystem.Models.Reservations

@{
    ViewData["Title"] = "Crear Reservación";
}

@using (Html.BeginForm("Create", "Reservations", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2>Crear</h2>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Reservation_Subject" class="control-label"></label>
                    <input asp-for="Reservation_Subject" class="form-control" />
                    <span asp-validation-for="Reservation_Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation_Location" class="control-label"></label>
                    <input asp-for="Reservation_Location" class="form-control" />
                    <span asp-validation-for="Reservation_Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation_StartDate" class="control-label"></label>
                    <input asp-for="Reservation_StartDate" class="form-control" />
                    <span asp-validation-for="Reservation_StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation_EndtDate" class="control-label"></label>
                    <input asp-for="Reservation_EndtDate" class="form-control" />
                    <span asp-validation-for="Reservation_EndtDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation_Recipient" class="control-label"></label>
                    <input asp-for="Reservation_Recipient" class="form-control" />
                    <span asp-validation-for="Reservation_Recipient" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation_NumbPeople" class="control-label"></label>
                    <input asp-for="Reservation_NumbPeople" class="form-control" />
                    <span asp-validation-for="Reservation_NumbPeople" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation_Description" class="control-label"></label>
                    <input asp-for="Reservation_Description" class="form-control" />
                    <span asp-validation-for="Reservation_Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservation_Delegate" class="control-label"></label>
                    <input asp-for="Reservation_Delegate" class="form-control" />
                    <span asp-validation-for="Reservation_Delegate" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-warning">Regresar</a>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
