@model BoardRoomSystem.Models.ViewModels.ReservationsViewModel
@using System.Web

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Editar</h2>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" id="edit-reservation">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Reservations.Reservation_Subject" class="control-label"></label>
                    <input asp-for="Reservations.Reservation_Subject" class="form-control" />
                    <span asp-validation-for="Reservations.Reservation_Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Location</label>
                    @Html.DropDownList("Location", Model.Location, "Seleccionar la ubicación" , new { @class="form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="Reservations.Reservation_StartDate" class="control-label"></label>
                    <input asp-for="Reservations.Reservation_StartDate" class="form-control" />
                    <span asp-validation-for="Reservations.Reservation_StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservations.Reservation_EndtDate" class="control-label"></label>
                    <input asp-for="Reservations.Reservation_EndtDate" class="form-control" />
                    <span asp-validation-for="Reservations.Reservation_EndtDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservations.Reservation_Recipient" class="control-label"></label>
                    <input asp-for="Reservations.Reservation_Recipient" class="form-control" />
                    <span asp-validation-for="Reservations.Reservation_Recipient" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservations.Reservation_NumbPeople" class="control-label"></label>
                    <input asp-for="Reservations.Reservation_NumbPeople" class="form-control" />
                    <span asp-validation-for="Reservations.Reservation_NumbPeople" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservations.Reservation_Description" class="control-label"></label>
                    <input asp-for="Reservations.Reservation_Description" class="form-control" />
                    <span asp-validation-for="Reservations.Reservation_Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reservations.Reservation_Delegate" class="control-label"></label>
                    <input asp-for="Reservations.Reservation_Delegate" class="form-control" />
                    <span asp-validation-for="Reservations.Reservation_Delegate" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-warning">Regresar</a>
                </div>
            </form>
        </div>
    </div>

<script>
    function SetSelectedLocation(Location)
    {
        var locations = document.getElementById('Location'), loc, i;

        for (i = 0; i < locations.length; i++ ) {
            loc = locations[i];
            if (loc.innerText === Location) {
                loc.selected = "true";
            }
        }
    }

    var reservationlocation = '@Html.Raw(Model.LocationName)';

    document.addEventListener('DOMContentLoaded', function() {
    SetSelectedLocation(reservationlocation);
    });


</script>


    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

