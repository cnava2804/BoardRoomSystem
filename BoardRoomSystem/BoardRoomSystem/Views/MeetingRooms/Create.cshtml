@model BoardRoomSystem.Models.ViewModel.ImageCreateModel

@{
    ViewData["Title"] = "Crear Sala de Juntas";
}

<h2>Crear Sala</h2>


<ol class="breadcrumb">
  <li><a asp-action="Index" asp-controller="Home">Home</a></li>
  <li><a asp-action="Index">Salas</a></li>
  <li><label>Nuevo</label></li>
  @*<li class="active">Data</li>*@
</ol>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create" enctype="multipart/form-data" asp-controller="MeetingRooms">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameMeetR" class="control-label"></label>
                <input asp-for="NameMeetR" class="form-control" />
                <span asp-validation-for="NameMeetR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionMeetR" class="control-label"></label>
                <input asp-for="DescriptionMeetR" class="form-control" />
                <span asp-validation-for="DescriptionMeetR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxNumbPeopleMeetR" class="control-label"></label>
                <input asp-for="MaxNumbPeopleMeetR" class="form-control" />
                <span asp-validation-for="MaxNumbPeopleMeetR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinNumbPeopleMeetR" class="control-label"></label>
                <input asp-for="MinNumbPeopleMeetR" class="form-control" />
                <span asp-validation-for="MinNumbPeopleMeetR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State_Id" class="control-label"></label>
                <select asp-for="State_Id" class="form-control" asp-items="ViewBag.State_Id">
                    <option>Seleccionar Estado</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdLocation" class="control-label"></label>
                <select asp-for="IdLocation" class="form-control" asp-items="ViewBag.IdLocation">
                    <option>Seleccionar Ubicación</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ThemeColorMeetR" class="control-label"></label>
                <input asp-for="ThemeColorMeetR" class="form-control" />
                <span asp-validation-for="ThemeColorMeetR" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ImagePath"></label>
                <input type="file" asp-for="ImagePath" class="form-control"/>
                <span class="text-danger" asp-validation-for="ImagePath"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
        
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
