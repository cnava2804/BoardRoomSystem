@model BoardRoomSystem.Models.MeetingRooms

@{
    ViewData["Title"] = "Crear Sala de Juntas";
}

<h2>Crear</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MTGR_Name" class="control-label"></label>
                <input asp-for="MTGR_Name" class="form-control" />
                <span asp-validation-for="MTGR_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MTGR_Description" class="control-label"></label>
                <input asp-for="MTGR_Description" class="form-control" />
                <span asp-validation-for="MTGR_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MTGR_MaxNumbPeople" class="control-label"></label>
                <input asp-for="MTGR_MaxNumbPeople" class="form-control" />
                <span asp-validation-for="MTGR_MaxNumbPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State_Id" class="control-label"></label>
                <select asp-for="State_Id" class ="form-control" asp-items="ViewBag.State_Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Location_Id" class="control-label"></label>
                <select asp-for="Location_Id" class ="form-control" asp-items="ViewBag.Location_Id"></select>
            </div>

            <div class="mb-3">
                <label asp-for="MTGR_Image" class="form-label"></label>
                <input class="form-control" type="file" id="formFile">
            </div>


            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
