<div>
    <a asp-action="Create" class="btn btn-success"><i class="far fa-file"></i> Nuevo</a>
</div>

<br />

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameMeetR)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DescriptionMeetR)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxNumbPeopleMeetR)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location.NameLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State.state_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>
                <th>
                    <label>Opciones</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.NameMeetR)</td>
                    <td>@Html.DisplayFor(model => item.DescriptionMeetR)</td>
                    <td>@Html.DisplayFor(model => item.MaxNumbPeopleMeetR)</td>
                    <td>@Html.DisplayFor(model => item.Location.NameLocation)</td>
                    <td>@Html.DisplayFor(model => item.State.state_Name)</td>
                    <td><img src="@item.ImagePath" height="100px;" width="150px;"/></td>

                    <td>
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.IdMeetR"><i class="fas fa-edit"></i>Editar</a>
                        <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.IdMeetR"><i class="far fa-file-alt"></i>Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


