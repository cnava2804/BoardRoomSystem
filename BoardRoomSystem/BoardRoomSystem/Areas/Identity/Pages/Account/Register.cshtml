@page
@using BoardRoomSystem.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


<div class="container">
    <div class="col-md-9 offset-md-3">
        <h3 class="col-md-6 ">Registrar nuevo Usuario</h3>
        <br />
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6 ">
                    <input asp-for="Input.FirstNameUser" placeholder="Nombre" class="form-control cont_register" />

                    <span asp-validation-for="Input.FirstNameUser" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6 ">
                    <input asp-for="Input.LastNameUser" placeholder="Apellido" class="form-control cont_register" />

                    <span asp-validation-for="Input.LastNameUser" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6 ">
                    <input asp-for="Input.Email" placeholder="Correo" class="form-control cont_register" />

                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6 ">
                    <input asp-for="Input.Password" placeholder="Contraseña" class="form-control cont_register" autocomplete="new-password" required />

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6 ">
                    <input asp-for="Input.ConfirmPassword" placeholder="Confirmar Contraseña" class="form-control cont_register" autocomplete="new-password" aria-required="true" />

                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
                </div>
                <div class="col-md-3">
                    <a class="w-100 btn btn-lg btn-danger" asp-controller="User" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}